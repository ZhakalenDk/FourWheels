@page
@model ModalAddModel
@{
    ViewData["Title"] = "Add new Customer Modal";
}


<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createCustomer">New customer</button>
<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#updateCustomer">Update customer</button>
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCustomer">Delete customer</button>

<form method="post" asp-page-handler="CreateCustomer">
    <div class="modal fade" id="createCustomer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createCustomerLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCustomerLabel">Create a new Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @{ 
                    // TODO: Out comment the asp-validation-for and asp-for below.
                    // TODO: Test that the modal doesn't close if the validation isn't valid (see JS).
                }
                <div class="modal-body">
                    <div class="row mb-2">
                        <div class="col-4">
                            <label>First name:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" @*asp-for="@Model.Customer.FirstName"*@ type="text" placeholder="Enter customers first name..." />
                            <br />
                            @*<span asp-validation-for="@Model.Customer.FirstName" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4">
                            <label>Last name:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" @*asp-for="@Model.Customer.LastName"*@ type="text" placeholder="Enter customers last name..." />
                            <br />
                            @*<span asp-validation-for="@Model.Customer.LastName" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4">
                            <label>Phone:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" @*asp-for="@Model.Customer.Phone"*@ type="text" placeholder="Enter customers phone number..." />
                            <br />
                            @*<span asp-validation-for="@Model.Customer.Phone" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4">
                            <label>Email:</label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" @*asp-for="@Model.Customer.Email"*@ type="text" placeholder="Enter customers email..." />
                            <br />
                            @*<span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>*@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="btnCreate">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>

